<div class="container">
  <h2 class='header-lined'>Users</h2>
  <div class="'row">
    <div class="col-md-7">
      <strong>Email</strong>
    </div>
    <div class="col-md-3">
      <strong>Total Rates</strong>
    </div>
    <div class="col-md-2">
      <strong>Actions</strong>
    </div>
  </div>
  <% @users.each do |user| %>
    <div class="'row" %>
      <div class="col-md-7">
        <%= user.email %>
      </div>
      <div class="col-md-3">
        <%= "%.2f" %  ((user.subscriptions.sum(&:rate)).to_f/100) %>
      </div>
      <div class="col-md-2">
        <%= link_to 'Edit Subscriptions', subscriptions_path(user_id: user) %> <br/>
        <%= link_to 'Edit Invoices', invoices_path(user_id: user) %>
      </div>
    </div>
  <% end %>
</div>