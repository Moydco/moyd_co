<div class='highlight-content highlighted-image-contact text-center cta-box light'>
  <div class='container'>
    <div class='row'>
      <div class='col-md-2'></div>
      <div class='col-md-8'>
        <h1 class='animated fadeInDown'>Contact us</h1>
        <p class='animated fadeInUp'>Or.. Fill up our inbox, we like that!</p>
      </div>
    </div>
  </div>
</div>
<div class='separator-shadow-top above-screenshot-shadow'>
  <%= image_tag 'shadow-separator-wide-top.png' %>
</div>
</div>
<div class='area-content'>
<div class='container'>
<!--start contact-->
<section id="contact">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8">
        <%= form_for @user, url: statics_path, method: :post, role: :form do |f| %>
          <div class="row">
            <%= render 'layouts/flashes' %>
            <div class="col-md-3">
              <div class="form-group">
                <label>First Name:</label>
                <%= f.text_field :first_name, class: 'form-control input-lg', placeholder: 'Given name' %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label>Last Name:</label>
                <%= f.text_field :last_name, class: 'form-control input-lg', placeholder: 'Family name' %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label>Email:</label>
                <%= f.email_field :email, class: 'form-control input-lg', placeholder: 'Email address' %>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label>Subscribe me to the mailing list</label>
                <%= f.check_box :opt_in, class: 'form-control input-mi' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group">
              <div class="col-md-12">
                <label>Message:</label>
                <%= f.text_area :message, class: 'form-control input-lg', rows: 12, cols: 80 %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="message"><div class="alert"></div></div>
              <input type="submit" value="Send" class="m-btn blue"/>
            </div>
          </div>
        <% end %>
      </div>
      <!--start sidebar-->
      <div class="col-md-4" id="address">
        <p><strong>Moyd.co Ltd</strong><br>
          Allen House Business Centre<br>
          The Maltings, Station Road <br>
          Sawbridgeworth, Herts, CM21 9JX<br>
          United Kingdom<br>
          VAT ID: GB 182805302<br>
          Company registration: 08743831
        </p>
        <p>You can meet us also <br>
          <a href="http://london.techhub.com/directions/london-campus/">@TechHub London</a><p>
        <p>general: hello-at-moyd-dot-co<br>

        <p>General phone: +44 (0) 20 3529 8491</p>
        <p>Tech support: +44 (0) 161 850 3720</p>
        <p>24/7 Email support: <a href="mailto:support@moyd.co">support-at-moyd.co</a></p>

      </div>
    </div>
  </div>
</section>
